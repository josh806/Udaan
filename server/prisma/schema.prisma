generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:Kerdada1109@localhost:5432/test"
}

model School {
  id       String    @id @default(uuid())
  name     String    @unique
  email    String    @unique
  users    User[]
  subjects Subject[]
}

model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String  @unique
  username  String  @unique
  avatar    String?
  student   Boolean
  school    School?  @relation(fields: [schoolId], references: [id])
  schoolId  String
  lessons   Lesson[]
  library   Library?
}

model Subject {
  id       String   @id @default(uuid())
  name     String
  lessons  Lesson[]
  school   School   @relation(fields: [schoolId], references: [id])
  schoolId String

  @@unique([name, schoolId])
}

model Lesson {
  id        String     @id @default(uuid())
  name      String
  createdAt DateTime   @default(now())
  video     String?
  drawing   String?
  subject   Subject    @relation(fields: [subjectId], references: [id])
  subjectId String
  scheduledDate String
  librarys  Library[]
  users     User[]
  notes     NoteBook[]

  @@unique([name, subjectId])
}

model Library {
  id      String     @id @default(uuid())
  lessons Lesson[]
  user    User       @relation(fields: [userId], references: [id])
  userId  String     @unique
  Notes   NoteBook[]
}

model NoteBook {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  note      String?
  library   Library  @relation(fields: [libraryId], references: [id])
  libraryId String
  Lesson    Lesson   @relation(fields: [lessonId], references: [id])
  lessonId  String

  @@unique([name, libraryId])
}

generator dbml {
  provider = "prisma-dbml-generator"
}
